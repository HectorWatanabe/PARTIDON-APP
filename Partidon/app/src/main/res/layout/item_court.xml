<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/photoImageView"
            android:layout_width="96dp"
            android:layout_height="87dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            tools:layout_editor_absoluteY="5dp"
            app:layout_constraintVertical_bias="0.508" />

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="San Isidro"
            app:layout_constraintLeft_toRightOf="@+id/photoImageView"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/starTwoImageView" />

        <ImageView
            android:id="@+id/deportImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/basketball"
            app:layout_constraintLeft_toRightOf="@+id/iconSportImageView"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/locationTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/iconSportImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/running"
            app:layout_constraintLeft_toRightOf="@+id/photoImageView"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/locationTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/starOneImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star"
            app:layout_constraintLeft_toRightOf="@+id/starFiveImageView"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView" />
        <ImageView
            android:id="@+id/starTwoImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star"
            app:layout_constraintLeft_toRightOf="@+id/starTreeImageView"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView" />
        <ImageView
            android:id="@+id/starTreeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView"
            app:layout_constraintLeft_toRightOf="@+id/photoImageView"
            android:layout_marginLeft="8dp" />
        <ImageView
            android:id="@+id/starFourtImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star"
            app:layout_constraintLeft_toRightOf="@+id/starTwoImageView"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView" />
        <ImageView
            android:id="@+id/starFiveImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star"
            app:layout_constraintLeft_toRightOf="@+id/starFourtImageView"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

        <ImageView
            android:id="@+id/locationImageFourtImageView"
            android:layout_width="20dp"
            android:layout_height="19dp"
            android:src="@drawable/placeholder"
            app:layout_constraintRight_toLeftOf="@+id/locationTextView"
            android:layout_marginRight="0dp"
            app:layout_constraintLeft_toRightOf="@+id/photoImageView"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/starTwoImageView" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/30/Hora"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Club PetroperÃº"
            app:layout_constraintLeft_toRightOf="@+id/photoImageView"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>


