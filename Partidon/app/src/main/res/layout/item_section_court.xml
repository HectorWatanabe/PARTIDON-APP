<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleSectionCourtTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancha de Tennis NÂ°"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/courtImageOneImageView"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tennis1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleSectionCourtTextView"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/courtImageTwoImageView"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tennis2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/courtImageOneImageView"
            app:layout_constraintTop_toBottomOf="@+id/titleSectionCourtTextView"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tipeCourtTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:text="Tipo de Cancha: "
            android:textColor="@color/ColorPrimaryText"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/courtImageTwoImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/metreCourtTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="Medidas: "
            android:textColor="@color/ColorPrimaryText"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/courtImageTwoImageView"
            app:layout_constraintTop_toBottomOf="@+id/tipeCourtTextView" />

        <TextView
            android:id="@+id/chairCourtTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="Bancas: "
            android:textColor="@color/ColorPrimaryText"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/courtImageTwoImageView"
            app:layout_constraintTop_toBottomOf="@+id/metreCourtTextView" />

        <TextView
            android:id="@+id/priceCourtTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio: "
            android:textColor="@color/ColorPrimaryText"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/chairCourtTextView"
            app:layout_constraintLeft_toRightOf="@+id/courtImageTwoImageView"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/saleCourtTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Oferta: "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/priceCourtTextView"
            app:layout_constraintLeft_toRightOf="@+id/courtImageTwoImageView"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/tipeCourtInputTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sintetico "
            android:textColor="@color/ColorPrimaryText"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/tipeCourtTextView"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/metreCourtInputTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,2 x 1"
            android:textColor="@color/ColorPrimaryText"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/metreCourtTextView"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tipeCourtInputTextView" />

        <TextView
            android:id="@+id/chairCourtInputTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Si"
            android:textColor="@color/ColorPrimaryText"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/chairCourtTextView"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/metreCourtInputTextView" />

        <TextView
            android:id="@+id/priceCourtInputTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/40 xHora "
            android:textColor="@color/ColorPrimaryText"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/priceCourtTextView"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/chairCourtInputTextView" />

        <TextView
            android:id="@+id/saleCourtInputTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/30 xHora "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/saleCourtTextView"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/priceCourtInputTextView" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>